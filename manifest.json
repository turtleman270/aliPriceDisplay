{
  "name": "Aliexpress Price Display",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "Displays the accurate price when on Aliexpress",
  "permissions": [
    "activeTab", 
    "scripting"
  ],
  "content_scripts": [
    {
        "matches": ["https://www.aliexpress.com/*"],
        "js": ["/content.js"]
    }
  ]
}